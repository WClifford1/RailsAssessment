<%= form_with(model: listing, local: true) do |form| %>

    <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div class="field">
        <%= form.label :price %>
        <%= form.text_field :price %>
    </div>



    <div class="field">
        <%= form.label :description %>
        <%= form.text_field :description %>
    </div>

    <div class="field">
        <%= form.label :address %>
        <%= form.text_field :address %>
    </div>

    <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city %>
    </div>

    <div class="field">
        <%= form.label :state %>
        <%= form.text_field :state %>
    </div>

    <div class="field">
        <%= form.label :country %>
        <%= form.text_field :country %>
    </div>

    <div class="field">
        <%= form.label :image %>
        <%= form.file_field :image %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>

<% end %> 